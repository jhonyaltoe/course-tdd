{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "CommonJS",
		"target": "ES2022",
		"esModuleInterop": true,
		"allowJs": true,
		"strictNullChecks": true,
		"paths": {
			"@presentation/*": ["./src/presentation/*"],
			"@domain/*": ["./src/domain/*"],
			"@data/*": ["./src/data/*"],
			"@infra/*": ["./src/infra/*"]
		}
	},
	"ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}