{
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "src",
		"module": "CommonJS",
		"target": "ES2022",
		"esModuleInterop": true,
		"allowJs": true,
		"strictNullChecks": true,
		"paths": {
			"@presentation/*": ["./src/presentation/*"],
			"@domain/*": ["./src/domain/*"],
			"@data/*": ["./src/data/*"],
			"@infra/*": ["./src/infra/*"]
		}
	},
	"include": ["src"],
	"exclude": [
		"./src/**/*.spec.ts",
		"./src/**/*.test.ts"
	],
	"ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}